{
  "author": "polkadot.{js+}",
  "description": "Polkadot js extension, plus some new features",
  "homepage_url": "https://github.com/Nick-1979/polkadot-Js-Plus-extension",
  "name": "polkadot{.js} plus extension",
  "short_name": "Plus",
  "manifest_version": 3,
  "version": "0.42.8.1",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Plus",
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_start"
  }],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [{ 
      "resources": ["page.js"],
      "matches": ["https://*/*"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "Plus": {
      "update_url": "https://github.com/Nick-1979/polkadot-Js-Plus-extension/tree/master/packages/extension-plus/docs/updates.json"
    }
  }
}